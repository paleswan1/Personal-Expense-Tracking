@page "/login"
@layout EmptyLayout

<div class="login-container">
    <div class="login-left">
        <div class="image-section">
            <img src="login.svg" alt="Background Image"/>
        </div>
    </div>
    <div class="login-right">
        <div class="login-form-container">
            <h2 class="fw-bold mb-2">Login</h2>
            <p class="mb-4">Provide your login credentials to access your CashFlo account.</p>
            <EditForm Model="@LoginRequest" OnValidSubmit="LoginHandler">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <InputText id="username" class="form-control" @bind-Value="LoginRequest.Username" placeholder="Enter your username"/>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <InputText type="password" id="password" class="form-control" @bind-Value="LoginRequest.Password" placeholder="Enter your password"/>
                </div>
                <div class="mt-4 d-grid">
                    <button type="submit" class="btn-submit">
                        Sign In
                    </button>
                </div>
            </EditForm>

            <div class="mt-3 text-center">
                <p>Do not have an account? <a href="/register">Register</a></p>
            </div>
        </div>
    </div>
</div>